@using StockApp.Models.Entites.Concrete
@model Customer

<div class="container" stlye="display:flex;justify-content:center;align-content:center;align-items:center; margin-top:5%;">
    <h1 class="h1"> Yeni Müşteri Ekle </h1>
</div>

<div class="formBody">

    <form action="@Url.ActionLink("Add", "Customer")" method="post" style="padding:5%;">
        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Müşteri Adı </label>
            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control", @placeholder = "Müşteri Adı", @style = "text-align:center;" })
            @Html.ValidationMessageFor(x => x.CustomerName, "", new{@style = "color:red;"})

        </div>

        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Müşteri Soyadı </label>
            @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control", @placeholder = "Müşteri Soyadı", @style = "text-align:center;" })
            @Html.ValidationMessageFor(x => x.CustomerSurname, "", new {@style = "color:red;"})

        </div>

        <button class="btn btn-primary btn-lg" type="submit"> Yeni Müşteri Ekle  </button>
</div>

       </div>

    </form>

