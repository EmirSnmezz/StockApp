@using StockApp.Models.Entites.Concrete;
@model Product
@{
    var categories = TempData["Categories"] as List<SelectListItem>;
    var brands = TempData["Brand"] as List<SelectListItem>;

}

<div class="container" style="display:flex;justify-content:center;align-content:center;align-items:center; margin-top:5%;">
    <h1 class="h1"> Ürün Ekle </h1>
</div>
<hr / style="width:50%; height:150%; color:black;">


<div class="formBody">

    <form action="@Url.ActionLink("Add","Product")" method="post" style="padding:5%;">
        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Ürün Adı </label>
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", @placeholder = "Ürün Adı", @style = "text-align:center;" })
            @Html.ValidationMessageFor(x => x.ProductName, "", new{@style="color:red;"})

        </div>

        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Kategori Seçiniz </label>
            @Html.DropDownListFor(x => x.CategoryId, categories, "Kategori Seçiniz", new { @class = "form-control", @placeholder = "Kategori Adı", @style = "text-align:center;" })
            @Html.ValidationMessageFor(x => x.CategoryId, "", new{@style="color:red;"})

        </div>

        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Marka </label>
            @Html.DropDownListFor(x => x.BrandId, brands, "Marka Seçiniz", new { @class = "form-control", @placeholder = "Marka", @style = "text-align:center;", @value = "Marka;" })
            @Html.ValidationMessageFor(x => x.BrandId, "", new { @style = "color:red;" })

        </div>

        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Stok </label>
            @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", @placeholder = "Stok", @style = "text-align:center;" })

        </div>

        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Fiyat </label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @placeholder = "Fiyat", @style = "text-align:center;" })

        </div>

        <button class="btn btn-primary btn-lg" type="submit"> Ürün Ekle  </button>
</div>

       </div>

    </form>




