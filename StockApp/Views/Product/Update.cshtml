@using StockApp.Models.Entites.Concrete;
@model Product

<div class="container" style="display:flex;justify-content:center;align-content:center;align-items:center;">

    <h1 class="h1"> Ürün Güncelle </h1>


</div>
<div class="formBody" style="border:outset; padding:2%;">

    <form action="@Url.ActionLink("Update","Product")" method="post" style="padding:5%;">




        <div class="form-group row col-lg-12">

            <label class="col-sm-2 col-form-label"> Ürün Adı </label>
            @Html.HiddenFor(x=> x.ProductId)
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", @placeholder = "Ürün Adı", @style = "text-align:center;" })


        </div>
@* 
        <div class="form-group row col-lg-12">
            <label class="col-sm-2 col-form-label"> Kategori Seçiniz </label>
            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control", @placeholder = "Kategori Adı", @style = "text-align:center;" })
        </div> *@

        <div class="form-group row col-lg-12">
            <label class="col-sm-2 col-form-label"> Marka </label>
            @Html.TextBoxFor(x => x.BrandId, new { @class = "form-control", @placeholder = "Marka", @style = "text-align:center;" })
        </div>

        <div class="form-group row col-lg-12">
            <label class="col-sm-2 col-form-label"> Kategori </label>
            @Html.DropDownListFor(x=> x.CategoryId, (List<SelectListItem>)ViewBag.values, new{@class = "form-control", @placeholder  = "Kategori", @style = "text-align:center"});
        </div>

        <div class="form-group row col-lg-12">
            <label class="col-sm-2 col-form-label"> Stok </label>
            @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", @placeholder = "Stok", @style = "text-align:center;" })
        </div>

        <div class="form-group row col-lg-12">
            <label class="col-sm-2 col-form-label"> Fiyat </label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @placeholder = "Fiyat", @style = "text-align:center;" })
        </div>
        <button class="btn btn-primary btn-lg" type="submit"> Güncelle  </button>
</div>



       </div>

    </form>




